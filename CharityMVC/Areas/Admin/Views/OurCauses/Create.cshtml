@using CharityMVC.Models
@using CharityMVC.ViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model OurcausesVM

<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Basic Form</h6>
        <form asp-area="Admin" asp-controller="OurCauses" asp-action="Create" enctype="multipart/form-data">
            
                <div id="emailHelp" class="form-text">
                    We'll never share your email with anyone else.
                </div>
            <div class="mb-3">
                <label  class="form-label">Image</label>
                <input type="file" asp-for="ImgFile" class="form-control" id="exampleInputEmail1"
                       aria-describedby="emailHelp">
                <span asp-validation-for="ImgFile" class="text-danger"></span>
                <div id="emailHelp" class="form-text">
                    We'll never share your email with anyone else.
                </div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">
                    Name
                </label>
                <input asp-for="Name" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">
                    Description
                </label>
                <input asp-for="ShortDescription" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">
                    Raise Price
                </label>
                <input asp-for="RaisedPrice" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">
                    Goal Price
                </label>
                <input asp-for="GoalPrice" class="form-control" id="exampleInputPassword1">
            </div>
            
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>